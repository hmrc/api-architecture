{
  "$id": "https://www.gov.uk/government/organisations/hm-revenue-customs/schema/itsa/cgt_submission",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Capital Gains Tax Submissions",
  "description": "JSON Schema representing a Capital Gains Tax Submission",
  "type": "object",
  "properties": {
    "ppdQualifyingDisposals": {
      "type": "object",
      "required": [
        "disposals",
        "ppdReturns"
      ],
      "properties": {
        "disposals": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "assetType": {
                "$ref": "#/definitions/ppdAssetType"
              },
              "assetDescription": {
                "$ref": "#/definitions/cfMedStringType"
              },
              "ppdReference": {
                "$ref": "#/definitions/ppdRefType"
              },
              "acquisitionDate": {
                "$ref": "#/definitions/cfDateType"
              },
              "disposalDate": {
                "$ref": "#/definitions/cfDateType"
              },
              "disposalProceeds": {
                "$ref": "#/definitions/cfMoneyNonNegType"
              },
              "allowableCosts": {
                "$ref": "#/definitions/cfMoneyNonNegType"
              },
              "gain": {
                "$ref": "#/definitions/cfMoneyNonNegGainType"
              },
              "loss": {
                "$ref": "#/definitions/cfMoneyNonNegLossType"
              },
              "claimOrElectionCodes": {
                "$ref": "#/definitions/claimElectionCodesType"
              },
              "gainAfterRelief": {
                "$ref": "#/definitions/cfMoneyNonNegType"
              },
              "lossAfterRelief": {
                "$ref": "#/definitions/cfMoneyNonNegType"
              }
            }
          }
        },
        "ppdReturns": {
          "type": "array",
          "minItems": 1,
          "maxItems": 4,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "required": [
              "assetType",
              "taxCharged"
            ],
            "anyOf": [
              {
                "required": [
                  "gainsReported"
                ]
              },
              {
                "required": [
                  "lossesReported"
                ]
              }
            ],
            "properties": {
              "assetType": {
                "$ref": "#/definitions/ppdAssetType"
              },
              "gainsReported": {
                "$ref": "#/definitions/cfMoneyNonNegType"
              },
              "lossesReported": {
                "$ref": "#/definitions/cfMoneyNonNegType"
              },
              "taxCharged": {
                "$ref": "#/definitions/cfMoneyNonNegType"
              }
            }
          }
        }
      }
    },
    "carriedInterest": {
      "type": "object",
      "required": [
        "gain"
      ],
      "items": {
        "gain": {
          "$ref": "#/definitions/cfMoneyNonNegGainType"
        }
      }
    },
    "losses": {
      "type": "object",
      "minItems": 1,
      "maxItems": 4,
      "items": {
        "broughtForwardLossesUsedInCurrentYear": {
          "$ref": "#/definitions/cfMoneyNonNegType"
        },
        "setAgainstInYearGains": {
          "$ref": "#/definitions/cfMoneyNonNegType"
        },
        "setAgainstInYearGeneralIncome": {
          "$ref": "#/definitions/cfMoneyNonNegType"
        },
        "setAgainstEarlierYear": {
          "$ref": "#/definitions/cfMoneyNonNegType"
        }
      }
    },
    "adjustments": {
      "tbc": "tbc"
    }
  },
  "definitions": {
    "ppdAssetType": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "",
        "example": "PRR",
        "enum": [
          "ukResidentialProperty",
          "nonResidentUkResidentialProperty",
          "nonResidentUkNonResidentialProperty",
          "nonResidentIndirect"
        ]
      }
    },
    "cfDateType": {
      "type": "string",
      "format": "date",
      "description": "Date in format YYYY-MM-DD",
      "example": "2021-04-06"
    },
    "cfMedStringType": {
      "type": "string",
      "minimum": 1,
      "maximum": 75,
      "pattern": "^[0-9a-zA-Z{\\u00C0-\\u02FFâ€™}\\- _&`():.'^]{1,90}$\n",
      "description": "",
      "example": ""
    },
    "cfMoneyNonNegType": {
      "type": "number",
      "multipleOf": 0.01,
      "minimum": 0.00,
      "maximum": 99999999999999.98,
      "description": "Positive monetary value to 2DP",
      "example": "1999.99"
    },
    "cfMoneyNonNegGainType": {
      "type": "number",
      "multipleOf": 0.01,
      "minimum": 0.00,
      "maximum": 99999999999999.98,
      "description": "The difference between the disposal proceeds and the allowable costs if positive",
      "example": "1999.99"
    },
    "cfMoneyNonNegLossType": {
      "type": "number",
      "multipleOf": 0.01,
      "minimum": 0.00,
      "maximum": 99999999999999.98,
      "description": "The difference between the disposal proceeds and the allowable costs if negative",
      "example": "1999.99"
    },
    "ppdRefType": {
      "type": "string",
      "pattern": "<TBD>",
      "description": "",
      "example": ""
    },
    "claimElectionCodesType": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "An enumeration of claim or election codes that the customer may make.",
        "example": "PRR",
        "enum": [
          "PRR",
          "BAD",
          "LET",
          "GHO",
          "ROR",
          "ESH",
          "ERL",
          "NVC",
          "SIR",
          "INV",
          "PRO",
          "OTH"
        ]
      }
    }
  }
}


